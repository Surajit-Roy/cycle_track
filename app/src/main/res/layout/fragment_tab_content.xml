<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Speedometer -->
    <TextView
        android:id="@+id/tv_speedometer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speedometer"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/speedometer_container"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_speedometer_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Start Button -->
    <Button
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start"
        app:layout_constraintTop_toBottomOf="@id/speedometer_container"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Activity Info -->
    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/time_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        app:layout_constraintStart_toEndOf="@+id/time_label"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: "
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        app:layout_constraintStart_toEndOf="@+id/time_label"
        app:layout_constraintEnd_toStartOf="@+id/cal_label"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/distance_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="00:00"
        app:layout_constraintStart_toEndOf="@+id/distance_label"
        app:layout_constraintTop_toBottomOf="@id/btn_start" />
    <TextView
        android:id="@+id/cal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie: "
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        app:layout_constraintEnd_toStartOf="@+id/cal_info"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/cal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="16dp" />

    <!-- Map -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/distance_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
